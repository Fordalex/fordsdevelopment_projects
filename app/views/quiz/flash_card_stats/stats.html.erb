<h1>Stats</h1>

<p>Score will decrease over time.</p>

<div class="row p-3">
  <% @flash_card_categories.each do |flash_card_category| %>
    <div class="flashCardCategoryStat-container border col-md-6 p-3">
      <h2><%= flash_card_category.name %></h2>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: 25%; background-color: <%= flash_card_category.colour %>;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
      </div>
      <hr>

      <h6>Sub Categories</h6>
      <% flash_card_category.flash_card_sub_categories.each do |flash_card_sub_category| %>
        <div class="flashCardSubCategoryStat-container border p-3">
          <h6><%= flash_card_sub_category.name %> | Cards: <%= flash_card_sub_category.flash_cards.count %></h6>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: 25%; background-color: <%= flash_card_category.colour %>;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
