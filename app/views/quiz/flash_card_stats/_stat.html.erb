<div class="flashCardCategoryStat-container border col-md-6 p-3 mb-5">
      <h2><%= category.name %></h2>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: 25%; background-color: <%= category.colour %>;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
      </div>
      <hr>

      <h6>Sub category</h6>
      <% category.children.each do |sub_category| %>
        <%= render partial: 'stat', locals: { category: sub_category } %>
      <% end %>
    </div>
