<%= @commits %>

<div class="projectNavigation-container">
  <% Project.all.each do |project| %>
    <%= link_to project_path(project), class: "projectNavigation-linkWrapper" do %>
      <div class="projectNavigation-link  <%= "projectNavigation-linkActive" if project.id == @project.id %>" id="<%= project.id %>"></div>
    <% end %>
  <% end %>
</div>

<div class="row m-0 p-0">
  <div class="col-3">
    <h5 class="project-count"><%= @project.order %>/<%= Project.count %></h5>
  </div>
  <div class="col-6 d-flex align-items-center justify-content-center">
    <h1 class="text-center project-name"><%= @project.name %></h1>
  </div>
  <div class="col-3 d-flex justify-content-end">
    <div class="project-imageContainer-outer">
      <div class="project-imageContainer-inner">
        <div class="project-imageWrapper">
          <%= image_tag @project.logo || "example.png", class: "project-image" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row m-0 p-0 mt-3">
  <div class="col-12 col-md-3 p-2 h-100">
    <div class="project-sectionContainer">
       <h4>Technologies</h4>
        <% @project.technologies.each do |technology| %>
          <%= link_to technology_path(technology), class: "projectSection-technologyWrapper" do %>
            <%= image_tag technology.icon %><%= technology.name %>
          <% end %>
        <% end %>
    </div>
  </div>
  <div class="col-12 col-md-9 p-2">
    <div class="project-sectionContainer">
      <h4>Features</h4>
      <div class="features-container">
        <% @project.completed_features.each do |feature| %>
          <%= render partial: "/shared/feature", locals: {feature: feature} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-12 p-2">
    <div class="project-sectionContainer">
      <h4>Description</h4>
      <p><%= @project.description %></p>
    </div>
  </div>
  <div class="col-2 p-2">
    <div class="project-sectionContainer">
      <h4>Theme</h4>
      <% if @project.theme_colours.present? %>
        <% @project.theme_colours.split(",").each do |theme| %>
          <div class="themeWrapper" style="background-color: <%= theme %>"></div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-6 p-2">
    <div class="project-sectionContainer">
      <h4>UX</h4>
    </div>
  </div>
  <div class="col-4 p-4">
    <%= image_tag @project.image || "example.png", class: "project-image" %>
  </div>
  <div class="col-12 p-2">
    <div class="project-sectionContainer">
      <h4>Github</h4>
    </div>
  </div>
</div>

<%= javascript_pack_tag "project" %>
