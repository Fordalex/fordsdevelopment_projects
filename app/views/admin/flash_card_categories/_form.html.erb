<%# Add the errors to the forms. %>
<%= form_with(model: [:admin, flash_card_category]) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :colour %>
    <%= form.color_field :colour, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :parent_id %>
    <%= form.select :parent_id, options_for_select(FlashCardCategory.all.order(:name).map { |p| [p.name, p.id] }, flash_card_category.parent_id), { include_blank: true }, class: "form-control" %>

  </div>

  <div class="actions">
  <%= form.submit class: "btn btn-success w-100 mt-3" %>
  </div>

<% end %>

