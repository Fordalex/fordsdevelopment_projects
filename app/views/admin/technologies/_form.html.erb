<%= form_with(model: [:admin, technology]) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :icon %>
    <%= form.select :icon, options_for_select(Dir.glob("app/assets/images/icons/*").map{|f| f.split("/")[-2..-1].join("/")}, technology.icon), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :icon_high_res %>
    <%= form.select :icon_high_res, options_for_select(Dir.glob("app/assets/images/icons/*").map{|f| f.split("/")[-2..-1].join("/")}, technology.icon_high_res), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :order %>
    <%= form.number_field :order, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :technology_type %>
    <%= form.select :technology_type_id, options_for_select(TechnologyType.all.map{|p| [p.name, p.id] }, technology.technology_type_id), class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success w-100 mt-3" %>
  </div>

<% end %>
