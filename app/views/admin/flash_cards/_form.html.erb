<%# Add the errors to the forms. %>
<%= form_with(model: [:admin, flash_card]) do |form| %>

  <div class="form-group">
    <pre>
      [
        {
          "title": "Title 1",
          "question": "Question 1",
          "answer": "Answer 1",
        }
      ]
    </pre>
    <%= label_tag :bulk_upload %>
    <%= text_area_tag :bulk_upload, '', class: "form-control large-textarea" %>
  </div>

  <div class="form-group">
    <%= form.label :question %>
    <%= form.text_area :question, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :answer %>
    <%= form.text_area :answer, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :flash_card_category_id %>
    <%= form.select :flash_card_category_id, options_for_select(FlashCardCategory.all.map{|p| [p.name, p.id]}, flash_card.flash_card_category_id), {}, class: "form-control" %>
  </div>

  <div class="actions">
  <%= form.submit class: "btn btn-success w-100 mt-3" %>
  </div>

<% end %>

