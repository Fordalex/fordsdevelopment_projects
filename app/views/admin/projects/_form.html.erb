<%= form_with(model: [:admin, project]) do |form| %>

  <div class="form-group">
    <%= form.label :order %>
    <%= form.text_field :order, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <p>#mainthemecolour, #secondarythemecolour, #other, #other</p>
  <div class="form-group">
    <%= form.label :theme_colours %>
    <%= form.text_field :theme_colours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_field :link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :logo %>
    <%= form.text_field :logo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.text_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ux %>
    <%= form.text_area :ux, class: "form-control" %>
  </div>

  <div class="admin-technologyOptionsContainer">
    <% Technology.all.each do |technology| %>
      <div class="form-group">
        <%= image_tag technology.icon %>
        <%= label_tag technology.name %>
        <%= check_box_tag "[technologies][#{technology.name}]", {}, project.technology_names.include?(technology.name) %>
      </div>
    <% end %>
  </div>

  <div class="actions">
  <%= form.submit class: "btn btn-success w-100 mt-3" %>
  </div>

<% end %>

