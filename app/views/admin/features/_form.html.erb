<%= form_with(model: [:admin, feature]) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :project %>
    <%= form.select :project_id, options_for_select(Project.all.map{|p| [p.name, p.id] }, feature.project_id), class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="admin-technologyOptionsContainer">
    <% Technology.all.each do |technology| %>
      <div class="form-group">
        <%= image_tag technology.icon %>
        <%= label_tag technology.name %>
        <%= check_box_tag "[technologies][#{technology.name}]", {}, feature.technology_names.include?(technology.name) %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success w-100 mt-3" %>
  </div>

<% end %>

