<%# Add the errors to the forms. %>
<%= form_with(model: [:admin, flash_card_sub_category]) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :flash_card_category_id %>
    <%= form.select :flash_card_category_id, options_for_select(FlashCardCategory.all.map{|p| [p.name, p.id]}, flash_card_sub_category.flash_card_category_id), {}, class: "form-control" %>
  </div>

  <div class="actions">
  <%= form.submit class: "btn btn-success w-100 mt-3" %>
  </div>

<% end %>

